<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:sfRotator="clr-namespace:Syncfusion.SfRotator.XForms;assembly=Syncfusion.SfRotator.XForms"
             xmlns:rating="clr-namespace:Syncfusion.SfRating.XForms;assembly=Syncfusion.SfRating.XForms"
             prism:ViewModelLocator.AutowireViewModel="True"
             BackgroundColor="Silver"
             x:Class="Okaz.PCL.Views.ProductDetailPage"
             Title="{Binding PhoneDetail.Name}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height=".6*"/>
                            <RowDefinition  Height=".1*"/>
                            <RowDefinition  Height=".05*"/>
                            <RowDefinition  Height=".05*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".6*" />
                            <ColumnDefinition Width=".4*" />
                        </Grid.ColumnDefinitions>
                        <!--Product Images Preview-->
                        <sfRotator:SfRotator Grid.Row="0"
                                             Grid.ColumnSpan="2"
                                             HorizontalOptions="Center"
                                             EnableAutoPlay="true"
                                             NavigationDelay="2000" 
                                             ItemsSource="{Binding PhoneDetail.ProductImgs}"
                                             NavigationDirection="Horizontal"
                                             NavigationStripMode="Dots"
                                             BackgroundColor = "WhiteSmoke"
                                             NavigationStripPosition="Bottom">
                            <sfRotator:SfRotator.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding .}"
                                           Aspect="AspectFit"/>
                                </DataTemplate>
                            </sfRotator:SfRotator.ItemTemplate>
                        </sfRotator:SfRotator>
                        <!--Product Name-->
                        <Label Text="{Binding PhoneDetail.Name}"
                               TextColor="Black"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               Grid.Column="0"/>
                        <rating:SfRating ReadOnly="False"
                                         ItemSize="20"
                                         Grid.Row="2"
                                         Grid.Column="1"
                                         HorizontalOptions="Center"/>
                        <Label Text="{Binding PhoneDetail.GetCountOfReviews, StringFormat='{0} Reviews'}"
                               Grid.Row="3"
                               Grid.Column="1"
                               HorizontalOptions="Start"/>
                        <!--Price-->
                        <Label Text="{Binding PhoneDetail.Price, StringFormat='{0} EGP'}"
                               Grid.Row="2"
                               Grid.Column="0"/>
                    </Grid>
                </Frame>
                <Button Text="Add to Cart" 
                        Command="{Binding }"
                        BackgroundColor="Navy"
                        TextColor="White"
                        FontSize="Medium"/>
                
                <Button Text="Add to Favorite" 
                        Command="{Binding }"
                        BackgroundColor="#fc6c85"
                        TextColor="White"
                        FontSize="Medium"/>
                <Frame Margin="5"
                       Padding="15">
                    <Label Text="Compare With another Product>"
                           FontSize="Medium"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                </Frame>
                <Frame Margin="5">
                    <StackLayout Padding="5">
                        <Label Text="Sold By:" />
                        <Label Text="{Binding PhoneDetail.Vendor}"
                               FontSize="Medium"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                        <Label Text="View More Vendors" 
                               TextColor="Blue" />
                    </StackLayout>
                </Frame>
                <Frame Margin="5"
                       Padding="5">
                    <StackLayout>
                        <Label Text="Description"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                        <Label Text="{Binding PhoneDetail.Description}" 
                               LineBreakMode="WordWrap" />
                        <BoxView HeightRequest="1"
                                 BackgroundColor="Gray" />

                        <Label Text="Specification"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--Data-->
                            <Label Text="Brand"
                                   FontAttributes="Bold"
                                   Grid.Row="0"
                                   Grid.Column="0"/>

                            <Label Text="Processor Type"
                                   FontAttributes="Bold"
                                   Grid.Row="1"
                                   Grid.Column="0"/>

                            <Label Text="Display Size"
                                   FontAttributes="Bold"
                                   Grid.Row="2"
                                   Grid.Column="0"/>
                            <!--Binding-->
                            <Label Text="{Binding PhoneDetail.Brand}"
                                   Grid.Row="0" 
                                   Grid.Column="1"
                                   HorizontalOptions="End"/>

                            <Label Text="{Binding PhoneDetail.ProcessorType}"
                                   Grid.Row="1" 
                                   Grid.Column="1"
                                   HorizontalOptions="End"/>

                            <Label Text="{Binding PhoneDetail.DisplaySize}"
                                   Grid.Row="2" 
                                   Grid.Column="1"
                                   HorizontalOptions="End"/>
                        </Grid>
                        <Label Text="Read More"
                               TextColor="Blue"/>
                    </StackLayout>
                </Frame>
                <Frame Margin="5">
                    <StackLayout >
                        <Label Text="Tap on start to rate"
                               HorizontalOptions="Center"/>
                        <rating:SfRating ReadOnly="False"
                                         HorizontalOptions="Center"/>
                        <Entry Placeholder="Review" />
                        <Button
                            Text="Submit Review"
                            BackgroundColor="DarkViolet"
                            TextColor="White"
                            FontSize="Medium"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
  
</ContentPage>